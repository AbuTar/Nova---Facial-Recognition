<Window x:Class="Nova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nova"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="20"
            BorderThickness="1"
            Background="#22202e"
            Padding="5">
        <Grid>
            <!--# This grid defines the dimensions and number of.  the rows and columns of the page-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height=" 9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.ColumnSpan="2"
                  Background="#22202e">
            </Grid>

            <!--<Grid Grid.Column="0"
                  Grid.Row="1"
                  Background="Transparent" Grid.RowSpan="2">
               
            </Grid>-->



            <StackPanel Orientation="Horizontal" 
                        Margin="10">
                <TextBlock VerticalAlignment="Center" 
                           Text="Select Camera:" 
                           Margin="5"/>
                <ComboBox Name="cameraComboBox" 
                          Width="150" 
                          SelectionChanged="CameraComboBox_SelectionChanged"
                          Background="Transparent" 
                          BorderBrush="Transparent"
                          Foreground="Black" 
                          IsHitTestVisible="True"/>
            </StackPanel>

            


            <Grid Grid.ColumnSpan="2" Grid.Row="1" Background="#2e2b3e"/>
           


            <StackPanel Grid.Column="1"
                        Grid.Row="0"
                        Height="60"
                        Background="Transparent"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Name ="Close"
                        Style="{StaticResource WindowStateButtons}"
                        Click="Close_Click">

                    <Ellipse Style="{StaticResource CircularIcon}"
                             Fill="PaleVioletRed"/>

                </Button>

                <Button Name ="Minimise"
                        Style="{StaticResource WindowStateButtons}"
                        Click="Minimise_Click">

                    <Ellipse Style="{StaticResource CircularIcon}"
                             Fill="#FFDB70"/>


                </Button>

                <Button Name ="Maximise"
                        Style="{StaticResource WindowStateButtons}"
                        Click="Maximise_Click">

                    <Ellipse Style="{StaticResource CircularIcon}"
                             Fill="LightSeaGreen"  />


                </Button>


            </StackPanel>

            <Grid Grid.Row="1"
            Grid.Column ="0" 
            Margin="10"
            Background="Transparent">
                <Image Name="videoImage" Stretch="Fill"/>
            </Grid>

            <Grid Grid.Row="1"
                  Grid.Column="2">
                
                
                <StackPanel>
                    <Button Name="CaptureImage"
                            Width="225"
                            Height="50"
                            VerticalAlignment="Center"
                            Margin="0,40,0,0"
                            Style="{StaticResource CaptureButtonStyle}"
                            Click="CaptureImage_Click">

                        <TextBlock>
                            Capture Image
                        </TextBlock>


                    </Button>

                    <Image Name="capturedImage"
                           Width="200"
                           Height="150"
                           Margin="0,20,0,20"
                           HorizontalAlignment="Center"
                           Stretch="Uniform" /> 

                    <Button Name="SubmitButton"
                            Width="225"
                            Height="50"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0"
                            Click="SubmitButton_Click"
                            Style="{StaticResource CaptureButtonStyle}">
                            
                        <TextBlock>
                            Confirm Selection
                        </TextBlock>

                    </Button>

                    <Button Name="HomeButton"
                            Width="225"
                            Height="50"
                            VerticalAlignment="Bottom"
                            Margin="0,30,0,0"
                            Style="{StaticResource CaptureButtonStyle}"
                            Click="HomeButton_Click">
                        <TextBlock>
                            Home
                        </TextBlock>

                    </Button>

                </StackPanel>


               


            </Grid>

        </Grid>
    </Border>
</Window>

