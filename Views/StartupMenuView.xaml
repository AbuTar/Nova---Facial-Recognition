<Window x:Class="Nova.Views.StartupMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        Title="Startup Menu"
        Height="400" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#141332">

    <Border Width="300"
        Height="400"
        Background="#141332"
        CornerRadius="2">


        <StackPanel Orientation="Vertical"
                    Margin="20">
            <TextBlock Text="Start"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontWeight="Bold"
                   FontSize="25"
                   Foreground="#fafafe"/>

            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="LoginButton"
                    Style="{StaticResource LoginButtonStyle }"
                    Command="{Binding LoginCommand}"
                    Grid.Row="1" Click="LoginButton_Click">

                </Button>

                <TextBlock Text="Don't have an account?"
                       Margin="0,0,0,0"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Grid.Row="2"
                       Foreground="#fafafe"/>

                <Button x:Name="SignUpButton"
                        Grid.Row="3"
                        Style="{StaticResource SignUpButtonStyle }"
                        Command="{Binding SignUpCommand}"
                        Click="SignUpButton_Click">   
                        

                </Button>
                
                <TextBlock Text="Press Above to Sign Up"
                           Margin="0,0,0,0"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Foreground="#fafafe"
                           Grid.Row="4"/>

                <Button x:Name="AdminButton"
                        Grid.Row="7"
                        Style="{StaticResource AdminLoginButtonStyle }"
                        Command="{Binding SignUpCommand}"
                        Click="AdminButton_Click">


                </Button>





            </Grid>



        </StackPanel>

    </Border>
</Window>
